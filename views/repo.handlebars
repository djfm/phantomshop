<div class="form-horizontal">
	<div class="form-group">
		<label class="control-label col-lg-3">Name</label>
		<p class="col-lg-9 form-control-static">{{repo.getName}}</p>
	</div>
	<div class="form-group">
		<label class="control-label col-lg-3">Branch</label>
		<p class="col-lg-9 form-control-static">{{repo.getBranch}}</p>
	</div>
	<div class="form-group">
		<label class="control-label col-lg-3">Remote</label>
		<p class="col-lg-9 form-control-static">{{repo.getRemoteName}} ({{repo.getRemote}})</p>
	</div>
	<div class="form-group">
		<label class="control-label col-lg-3">Remote Branch</label>
		<p class="col-lg-9 form-control-static">{{repo.getRemoteBranch}} {{#if repo.getDistance}}<span class='label label-primary'>{{repo.getDistance}}</span>{{/if}}</p>
	</div>
	<div class="form-group">
		<div class="col-lg-9 col-lg-offset-3">
			<form method="POST" action="/repos/{{repo.getName}}/pull">
				<button class="btn btn-primary">Git Pull</button>
			</form>
		</div>
	</div>
</div>