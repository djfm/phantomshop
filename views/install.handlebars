<form ng-controller="InstallFormCtrl" method="POST" action="/install" class="form-horizontal">
	<div class="form-group">
		<label for="repository" class="col-lg-3 control-label">Repository</label>
		<div class="col-lg-9">
			<input id="repository" type="text" name="repository" ng-model="repository" validuri class="form-control">
		</div>
	</div>
	<div class="form-group">
		<label for="branch" class="col-lg-3 control-label">Branch</label>
		<div class="col-lg-9">
			<input id="branch" type="text" name="branch" ng-model="branch" ng-change="updateShopName()" class="form-control">
		</div>
	</div>
	<div class="form-group">
		<label for="shopName" class="col-lg-3 control-label">Shop Name</label>
		<div class="col-lg-9">
			<input id="shopName" type="text" name="shopName" ng-model="shopName" class="form-control">
		</div>
	</div>
	<div class="form-group">
		<label for="installLanguage" class="col-lg-3 control-label">Install Language</label>
		<div class="col-lg-9">
			<input id="installLanguage" type="text" name="installLanguage" ng-model="installLanguage" ng-change="updateShopName()" class="form-control">
		</div>
	</div>
	<div class="form-group">
		<label for="installCountry" class="col-lg-3 control-label">Install Country</label>
		<div class="col-lg-9">
			<input id="installCountry" type="text" name="installCountry" ng-model="installCountry" ng-change="updateShopName()" class="form-control">
		</div>
	</div>
	<div class="form-group">
		<div class="col-lg-9 col-lg-offset-3">
			<button class="btn">Install</button>
		</div>
	</div>
</form>

<script>
	function InstallFormCtrl($scope)
	{
		$scope.shopName = $scope.branch = "1.6";
		$scope.repository = '{{repository}}';

		$scope.installLanguage = 'en';
		$scope.installCountry = 'us';

		$scope.updateShopName = function()
		{
			$scope.shopName = "My " + $scope.installLanguage + '_' + $scope.installCountry + ' ' + $scope.branch + " Shop";
		}

		$scope.updateShopName();
	}
</script>