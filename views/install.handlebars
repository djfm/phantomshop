<form ng-controller="InstallFormCtrl" method="POST" action="/install" class="form-horizontal">
	<div class="form-group">
		<label for="branch" class="col-lg-3 control-label">Branch</label>
		<div class="col-lg-9">
			<input id="branch" type="text" name="branch" ng-model="branch" ng-change="updateShopName()" class="form-control">
		</div>
	</div>
	<div class="form-group">
		<label for="shop_name" class="col-lg-3 control-label">Shop Name</label>
		<div class="col-lg-9">
			<input id="shop_name" type="text" name="shop_name" ng-model="shop_name" class="form-control">
		</div>
	</div>
	<div class="form-group">
		<div class="col-lg-9 col-lg-offset-3">
			<button class="btn">Install</button>
		</div>
	</div>
</form>

<script>
	function InstallFormCtrl($scope)
	{
		$scope.shop_name = $scope.branch = "1.6";

		$scope.updateShopName = function()
		{
			$scope.shop_name = "My " + $scope.branch + " Shop";
		}

		$scope.updateShopName();
	}
</script>